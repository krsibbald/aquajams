%p#notice= notice
%h1 Listing Artists
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @artists.each do |artist|
      %tr
        %td= artist.name
        %td= link_to 'Show', artist
        %td= link_to 'Edit', edit_artist_path(artist)
        %td= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Artist', new_artist_path
